<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".CrearCuentaActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/logotourapp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Crear Cuenta" />

    <EditText
        android:id="@+id/crearNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:hint="Nombre Completo"
        android:inputType="text" />

    <EditText
        android:id="@+id/crearUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:hint="Nombre de Usuario"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <EditText
            android:id="@+id/ID"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Número de ID"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerID"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:entries="@array/tipo_id_options" />

    </LinearLayout>




    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editPasswordConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Confirmar"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:backgroundTint="@color/black"
            android:text="Confirmar" />

        <Button
            android:id="@+id/Salir"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:backgroundTint="@color/black"
            android:text="Salir" />


    </LinearLayout>

</LinearLayout>