<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ActivityDatosPago">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/black"
        android:textSize="45dp"
        android:textStyle="bold"
        android:text="Datos de pago"
        android:inputType="text" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="80dp"
        android:hint="Nombre Propietario"
        android:inputType="text"
        android:textSize="22dp"/>


    <EditText
        android:id="@+id/numTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:hint="Numero Tarjeta"
        android:inputType="numberPassword"
        android:textSize="22dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/Expiracion"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Fecha Expiracion"
            android:inputType="date"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/CCV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="CCV"
            android:inputType="numberPassword"
            android:textSize="22dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/Direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:hint="Direccion"
        android:inputType="text"
        android:textSize="22dp"/>



    <EditText
        android:id="@+id/ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:hint="Ciudad"
        android:inputType="text"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/Provincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:hint="Provincia"
        android:inputType="text"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/Postal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:hint="Codigo Postal"
        android:inputType="text"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/Confirmar"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:backgroundTint="@color/black"
        android:text="Confirmar" />




</LinearLayout>